@using SKYCOM.DLManagement.Data
@inject Message _message

<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog-content" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@_message.MessageList["CheckContents"]</h5>
            </div>
            <div class="modal-body">
                <div class="mail-content">
                    <p><span style="white-space: pre-line">@ConfirmationDisplay</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Close()">@_message.MessageList["Close"]</button>
            </div>
        </div>
    </div>
</div>


@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {

    private string ConfirmationDisplay = "";
    public string ModalDisplay = "none;";
    public string ModalClass = "";
    public bool ShowBackdrop = false;

    public void Open(string code)
    {
        ConfirmationDisplay = code;
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }
}